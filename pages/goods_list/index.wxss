/* pages/goods_list/index.wxss */
.goods_list{
  margin-top: 20rpx;
}
.goods_list navigator{
  display: flex;
  border-bottom: 2rpx solid #eee;
  margin-bottom: 20rpx;
}
.goods_list_right{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: var(--themeFontSize);
}
.goods_list_left{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_list_left image{
  width: 60%;
}
.goods_list_right view:nth-child(1){
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods_list_right view:nth-child(2){
  color: var(--themeColor);
}